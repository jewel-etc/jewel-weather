<body >
    {{>Header}}
    
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">

                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your location" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>


                <div class="tempInformation">
                    <div class="top_layer">

                        <p id="day"></p>
                        <p id="today_date"></p>

                    </div>

                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"></p>
                            <p id="temp_status"> </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



    {{>Footer}}

    <script src="/js/main.js?sensor=true"></script>
    <script>

        function currentDay() {
            var day = new Date();
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            day = weekday[day.getDay()];
            let currentDate = (new Date()).toString().split(' ').splice(1,3).join(' ');
            
            document.querySelector('#day').innerHTML = day;
            document.querySelector('#today_date').innerHTML=currentDate;
                    }
        currentDay();
    </script>

